{% extends 'front.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}

    <h1>Mes Produits</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Categorie</th>
            <th>Valeur</th>
            <th>Images</th>

            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.categorie }}</td>
                <td>{{ produit.valeur }}</td>
                <td>
                    <img width="100" height="100" src="{{ asset('uploads/images/') }}{{ produit.image }}" >
                </td>
                <td>

                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning">edit</a>
                    <form method="post" action="{{ path('app_produit_delete', {'id': produit.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
