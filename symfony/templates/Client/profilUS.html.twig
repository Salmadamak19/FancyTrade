{% extends 'front.html.twig' %}
{% block body %}


        <section class="module-medium" id="demos">
          <div class="container">
            <div class="row multi-columns-row">
            <div class="col-md-12">
    
    <h1> MY PROFILE </h1>


    </ul>
    <div class="card mb-4">
      <h5 class="card-header">Profile Details</h5>
      <!-- Account -->
      
      <hr class="my-0">
      <div class="card-body">
        
          {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
          <div class="row">


            <div class="mb-3 col-md-6">
              <label for="email" class="form-label">Name</label>
              
              {{ form_widget(f.nom,{attr:{'class':'form-control'}}) }}
            </div>
                        <div class="mb-3 col-md-6">
              <label for="email" class="form-label">prenom</label>
              
              {{ form_widget(f.prenom,{attr:{'class':'form-control'}}) }}
            </div>

            <div class="mb-3 col-md-6">
              <label for="email" class="form-label">Email</label>
              {{form_widget(f._token)}}
              {{ form_widget(f.email,{attr:{'class':'form-control'}}) }}
            </div>
            
            
            <div class="mb-3 col-md-6">
            <label class="form-label" for="basic-default-name">Password</label>
              {{ form_widget(f.password.first,{attr:{'class':'form-control'}}) }}
              {{ form_errors(f.password.first,{attr:{'class':'text-danger'}}) }}
            </div>
            
            
            
            <div class="mb-3 col-md-6">
            <label class="form-label" for="basic-default-name">Confirm Password</label>
           
              {{ form_widget(f.password.second,{attr:{'class':'form-control'}}) }}
            </div>
                
          </div>
            


      </div>
      <!-- /Account -->
    </div>
    
    {{ form_end(f) }}

              

          </div>
        </section>


    {% endblock %} 
    
   