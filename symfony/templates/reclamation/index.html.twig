{% extends 'lazy.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <center><h1>Liste des Reclamations</h1></center>
    <center><a class="btn btn-border-d" href="{{ path('app_reclamation_new') }}">Create new</a></center>
    <center><a class="btn btn-border-d" href="{{ path('PDF_Reclamation') }}">PDF</a></center>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Utilisateur</th>
                <th>Contenu</th>
                <th>Date De Creation</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        {% set i=1 %}
        {% for reclamation in reclamations %}
            <tr style="cursor: pointer" data-rec-id="{{ reclamation.id }}">
                <td>{{ i }}</td>
                {% set i = i + 1 %}
                <td>{{ reclamation.user.email }}</td>
                <td>{{ reclamation.message }}</td>
                <td>{{ reclamation.createdAt ? reclamation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reclamation.status ? 'Repondu' : 'En cours' }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <script>
        document.querySelectorAll('[data-rec-id]').forEach(element => {
            element.addEventListener('click', ()=>{
                window.location.href = element.getAttribute('data-rec-id')
            })
        })
    </script>
{% endblock %}
