{% extends 'lazy.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Sujet</th>
                <td>{{ post.sujet }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>NbrJaime</th>
                <td>{{ post.nbrJaime }}</td>
            </tr>
            {# <tr>
                <th>Image</th>
                <td>{{ post.image }}</td>
            </tr> #}
            <tr>
                <th>NomUser</th>
                <td>{{ post.user.nom }}</td>
            </tr>
            <tr>
                <th>DateP</th>
                <td>{{ post.dateP ? post.dateP|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Communaute</th>
                <td>{{ post.communaute }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}"class="btn btn-primary mb-4 ml-5">back to list</a>

    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-info mb-4 mr-5">edit</a>


    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
